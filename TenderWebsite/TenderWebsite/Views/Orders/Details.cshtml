@{
    ViewBag.Title = "Details";
}

<h1 class="text-center pb-4">Order Details</h1>

<div class="row mb-4">
    <div class="col-sm-6 offset-sm-3">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Name</h4>
                <p class="card-text">Name goes here</p>
                <hr />
                <h4 class="card-title">Amount</h4>
                <p class="card-text">Amount goes here</p>
                <hr />
                <h4 class="card-title">Time Remaining</h4>
                <p class="card-text">Remaining time calculated goes here</p>
                <hr />
                <h4 class="card-title">Cost</h4>
                <p class="card-text">Cost goes here</p>
                <hr />
                <h4 class="card-title">Created On</h4>
                <p class="card-text">Date created goes here</p>
                <hr />
                <h4 class="card-title">Last Edited On</h4>
                <p class="card-text">Last edited date goes here</p>
            </div>
        </div>
    </div>
</div>
<div class="row mb-4">
    <div class="col-sm-6 offset-sm-3">
        <div class="row">
            <div class="col-md pr-md-2">
                <button class="btn btn-primary btn-block" data-toggle="modal" data-target="#deliveryModal">Delivery</button>
            </div>
            <div class="col-md pl-md-2">
                <button class="btn btn-danger btn-block" data-toggle="modal" data-target="#cancelModal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="deliveryModal" tabindex="-1" role="dialog" aria-labelledby="deliveryModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deliveryModalLabel">Delivery satisfaction</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span>Has the delivery arrived completely and up to a certain quality?</span>
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Yes", "Accept", "Deliveries", null, new { @class = "btn btn-success" })
                @Html.ActionLink("No", "Reject", "Deliveries", null, new { @class = "btn btn-danger" })
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="cancelModal" tabindex="-1" role="dialog" aria-labelledby="cancelModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="cancelModalLabel">Are you sure?</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <span>Are you sure you want to cancel this order?</span>
            </div>
            <div class="modal-footer">
                @Html.ActionLink("Yes", "Cancel", "Orders", null, new { @class = "btn btn-success" })
                <button type="button" class="btn btn-danger" data-dismiss="modal">No</button>
            </div>
        </div>
    </div>
</div>